<% @posts.each do |post| %>
  <%= link_to post_path(post), id: "posts-index-links" do %>
    <div class="row text-left p-4 border-bottom">
      
      <div class="col-sm-3 text-center">
        <%= image_tag @post.picture, class: "post-img" rescue image_tag 'logo_b.png', class: "post-img" %>    
      </div>
     
      <div class="col-sm-6">
        <%= post.title %>
        <p id="listing-descript">
        <% if post.description.length > 100 %>
          <%= post.description[0..100]  %>...</p>
        <% else %>
          <%= post.description %></p>
        <% end %>
      </div>
     
      <div class="col-sm-3">
        <strong>$<%= post.price %></strong>
        <p id="listing-date">
          <%= time_ago_in_words(post.created_at) %> ago
        </p>
      </div>
      
    </div>
  <% end %>
<% end %>
<br>
<br>

<div class="d-flex justify-content-center">
  <%= paginate @posts %>
</div>