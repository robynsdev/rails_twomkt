<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<%= image_tag @post.picture, class: "show-img" if @post.picture.attached? %>

<p>
  <strong>Price:</strong>
  <%= @post.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<% if can? :update, @post %><%= link_to 'Edit', edit_post_path(@post) %><% end %>|
<%= link_to 'Back', posts_path %>
